#!/bin/ash
IFS=$'\n'
for i in $(find /videos -path "/videos/System Volume Information" -prune -o -type f -print | uniq); do 
    echo "file \"$i\"" | tee -a /tmp/videos.tmp
done
ffmpeg -loop -f concat -safe 0 -i /tmp/videos.tmp -c copy -f mpegts "icecast://source:$ICECAST_SOURCE_SECRET@$ICECAST_SERVER:$ICECAST_PORT/ICECAST_MOUNT.ts"
